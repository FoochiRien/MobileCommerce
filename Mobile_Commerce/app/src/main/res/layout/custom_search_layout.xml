<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="15dp">

    <ImageView
        android:id="@+id/product_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/itemname_view"
        android:layout_width="222dp"
        android:layout_height="41dp"
        android:paddingBottom="5dp"
        android:text="Test"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/product_imageview"
        android:layout_marginTop="0dp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/product_imageview"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"/>
    <!---->
    <TextView
        android:id="@+id/currentprice_view"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Test"
        android:textSize="18sp"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@+id/product_imageview"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/itemname_view"
        app:layout_constraintBottom_toBottomOf="@+id/product_imageview"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        />



</android.support.constraint.ConstraintLayout>