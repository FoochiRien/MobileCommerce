<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lyadrienne.generalassemb.git.myapplication.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search"/>

    <Button
        android:id="@+id/thirtypercentoff_view"
        android:text="30% OFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/twelvepercentoff_view"
        android:text="12% OFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/clearance_view"
        android:text="Clearance"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/barbie_view"
        android:text="Barbie View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ethnicity_view"
        android:text="Ethnicity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:padding="12dp"
        android:layout_below="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
