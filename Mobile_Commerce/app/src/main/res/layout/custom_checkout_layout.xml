<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/colorParentBackground"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:padding="15dp">

    <ImageView
        android:id="@+id/product_imageview2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.017"/>

    <TextView
        android:id="@+id/itemname_view2"
        android:layout_width="196dp"
        android:layout_height="37dp"
        android:padding="8dp"
        android:background="@color/colorViewBackground"
        android:text="Test"
        android:textSize="12sp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/product_imageview2"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintTop_toTopOf="@+id/product_imageview2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currentprice_view2"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="16dp"
        />
    <!---->
    <TextView
        android:id="@+id/currentprice_view2"
        android:layout_width="195dp"
        android:layout_height="33dp"
        android:padding="8dp"
        android:background="@color/colorViewBackground"
        android:text="Test"
        android:textSize="18sp"
        android:maxLines="2"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_imageview2"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/product_imageview2"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.588"/>



</android.support.constraint.ConstraintLayout>