<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

    <ImageView
        android:id="@+id/product_imageview2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.49"/>

    <TextView
        android:id="@+id/itemname_view2"
        android:layout_width="213dp"
        android:layout_height="37dp"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="12sp"

        app:layout_constraintTop_toTopOf="@+id/product_imageview2"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/product_imageview2"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="131dp"/>

    <TextView
        android:id="@+id/currentprice_view2"
        android:layout_width="71dp"
        android:layout_height="39dp"
        android:textSize="18sp"
        android:text="Amount"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/product_imageview2"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/product_imageview2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.084"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/itemname_view2"/>

</android.support.constraint.ConstraintLayout>